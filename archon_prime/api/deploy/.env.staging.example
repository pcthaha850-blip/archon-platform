# ============================================================
# ARCHON PRIME - Staging Environment Configuration
# ============================================================
# Copy to .env.staging and fill in real values
# ============================================================

# Application
APP_ENV=staging
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database (Managed PostgreSQL)
DATABASE_URL=postgresql+asyncpg://archon_staging:CHANGE_ME@staging-db.example.com:5432/archon_prime_staging
POSTGRES_USER=archon_staging
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=archon_prime_staging

# Redis (Managed Redis)
REDIS_URL=redis://:CHANGE_ME@staging-redis.example.com:6379/0
REDIS_PASSWORD=CHANGE_ME

# Security - Generate with: openssl rand -hex 32
JWT_SECRET_KEY=GENERATE_SECURE_KEY_MIN_32_CHARS
JWT_REFRESH_SECRET_KEY=GENERATE_SECURE_KEY_MIN_32_CHARS
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption - Generate with: python -c "import secrets; print(secrets.token_hex(16))"
ENCRYPTION_KEY=GENERATE_32_BYTE_KEY_HERE

# CORS
CORS_ORIGINS=["https://staging.archon.ai"]

# Rate Limiting (slightly higher for testing)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Signal Gate
SIGNAL_CONFIDENCE_THRESHOLD=0.70
SIGNAL_MAX_POSITIONS=5
SIGNAL_MAX_DAILY_SIGNALS=100

# Features
MAINTENANCE_MODE=false
TRADING_ENABLED=true
REGISTRATION_ENABLED=true
